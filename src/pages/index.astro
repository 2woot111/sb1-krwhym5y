<style>
	main {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		background: #f8e1ff;
		color: #000000;
		position: relative;
	}

	.brand-link {
		position: absolute;
		top: 2rem;
		left: 2rem;
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.brand-text {
		color: #000000;
		font-size: 1.5rem;
		font-weight: bold;
		display: inline-flex;
		align-items: center;
	}

	.brand-accent {
		font-size: 1.2rem;
		margin-top: 4px;
		margin-left: 5px;
	}

	.hero-section {
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 4rem 2rem;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.hero-title {
		position: relative;
		margin-bottom: 2rem;
	}

	.title-accent {
		position: absolute;
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: #000000;
		border-radius: 2px;
	}

	h1 {
		font-size: 3.5rem;
		margin-bottom: 2rem;
		position: relative;
		z-index: 1;
	}

	.mission-text {
		max-width: 600px;
		margin-bottom: 2rem;
		font-size: 1.25rem;
		line-height: 1.7;
		position: relative;
		z-index: 1;
	}

	.apply-button {
		background: #000000;
		color: #ffffff;
		text-decoration: none;
		padding: 1.2rem 3rem;
		font-size: 1.25rem;
		cursor: pointer;
		transition: all 0.3s ease;
		position: relative;
		z-index: 1;
		border-radius: 30px;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
	}

	.apply-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
	}

	.university-banner {
		width: 100%;
		overflow: hidden;
		padding: 1.5rem 0;
		background: rgba(255, 255, 255, 0.7);
		border-top: 1px solid rgba(0, 0, 0, 0.05);
	}

	.banner-content {
		display: flex;
		gap: 4rem;
		white-space: nowrap;
		opacity: 0.9;
	}

	.scroll-content {
		display: flex;
		gap: 4rem;
		animation: scroll 60s linear infinite;
	}

	.banner-content span {
		font-size: 1rem;
		color: #333;
		font-weight: 500;
		opacity: 0.8;
		transition: opacity 0.3s ease;
	}
	
	.banner-content span:hover {
		opacity: 1;
	}

	@keyframes scroll {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-100%);
		}
	}
</style>

<script>
  const applyButton = document.getElementById('apply-button');
  
  applyButton?.addEventListener('click', (e) => {
    e.preventDefault();
    
    // Generate or retrieve user ID
    const userId = localStorage.getItem('bolt_user_id') || 
      crypto.randomUUID();
    
    if (!localStorage.getItem('bolt_user_id')) {
      localStorage.setItem('bolt_user_id', userId);
    }
    
    // Log interaction
    const apiUrl = import.meta.env.DEV ? 
      '/api/track-interaction' : 
      '/.netlify/functions/entry/api/track-interaction';

    fetch(apiUrl, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        user_id: userId,
        timestamp: new Date().toISOString(),
        action: 'apply_start'
      }),
    }).finally(() => {
      window.location.href = '/application';
    });
  });
</script>