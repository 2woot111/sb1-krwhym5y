</Layout>

<style>
  .reject-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
    background: #f8e1ff;
  }

  .brand-link {
    position: absolute;
    top: 2rem;
    left: 2rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .brand-text {
    color: #000000;
    font-size: 1.5rem;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
  }

  .reject-content {
    text-align: center;
    max-width: 600px;
    padding: 2.5rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .reject-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #000;
  }

  .subtitle {
    font-size: 1.5rem;
    color: #444;
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .next-steps {
    text-align: left;
    margin: 2rem 0;
    padding: 1.5rem;
    background: #f9f9f9;
    border-radius: 12px;
  }

  .next-steps h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .next-steps ul {
    list-style-type: none;
    padding: 0;
  }

  .next-steps li {
    margin: 0.8rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: #555;
    font-size: 1.1rem;
  }

  .next-steps li::before {
    content: "‚Ä¢";
    position: absolute;
    left: 0;
    color: #000;
  }

  .home-button {
    display: inline-block;
    background: #000000;
    color: #ffffff;
    padding: 1.2rem 3rem;
    font-size: 1.25rem;
    border-radius: 30px;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-top: 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .home-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  .linkedin-link {
    color: #0077b5;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .linkedin-link:hover {
    opacity: 0.8;
  }
</style>