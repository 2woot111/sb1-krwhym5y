---
import Layout from '../layouts/Layout.astro';
import ExternalLink from '../components/ExternalLink.astro';
---

<Layout title="Success - August">
  <main class="success-page">
    <div class="brand-link">
      <a href="https://augustlearn.com/" class="brand-text">August ‚ú®</a>
    </div>
    
    <div class="success-content">
      <div class="success-icon">üéâ</div>
      <h1>Congratulations!</h1>
      <p class="subtitle">You're exactly who we're looking for ‚≠ê</p>
      <p class="description">
        We'd love to chat with you about joining our mission to decentralize college admissions.
        Book a call with us to discuss next steps üìû
      </p>
      <ExternalLink href="https://calendly.com/seanhargrow/chat" class="book-button">
        Schedule Your Call
      </ExternalLink>
      <p class="deadline">Please book by January 31st</p>
    </div>
  </main>
</Layout>

<style>
  .success-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
  }

  .brand-link {
    position: absolute;
    top: 2rem;
    left: 2rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .brand-text {
    color: #000000;
    font-size: 1.5rem;
    font-weight: bold;
    display: inline-flex;
    align-items: center;
  }

  .success-content {
    text-align: center;
    max-width: 600px;
    padding: 2rem;
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .success-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    animation: bounce 1s ease infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #000;
  }

  .subtitle {
    font-size: 1.5rem;
    color: #444;
    margin-bottom: 1.5rem;
  }

  .description {
    font-size: 1.25rem;
    color: #666;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .book-button {
    display: inline-block;
    background: #000000;
    color: #ffffff;
    padding: 1.2rem 3rem;
    font-size: 1.25rem;
    border-radius: 30px;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .book-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  }

  .deadline {
    font-size: 1rem;
    color: #666;
    margin-top: 1rem;
  }
</style>